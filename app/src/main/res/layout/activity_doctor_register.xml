<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_doctor_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_doctor"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bggreen2" />

        <TextView
            android:id="@+id/doctor_register_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_doctor"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Doctor Registration"
            android:textColor="@color/colorDarkGreen"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/doctor_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/doctor_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/doctor_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_email"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Passsword"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/doctor_register_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_password"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Age"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/doctor_hospital_clinic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_age"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Hospital/Clinic Name"
            android:inputType="text"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:padding="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/doctor_register_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_hospital_clinic_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Specialization"
            android:inputType="text"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:padding="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/doctor_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_specialization"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_2"
            android:hint="Phone No. +92123456789"
            android:inputType="text"
            android:textColor="@color/colorDarkGreen"
            android:textColorHint="@color/colorDarkGreen"
            android:padding="15dp"
            android:textSize="16sp" />


        <Button
            android:id="@+id/doctor_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_buttons"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_design_1"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="22sp" />

        <RadioGroup
            android:id="@+id/radio_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textColor="@color/colorDarkGreen"
                android:textSize="19sp" />

            <RadioButton
                android:id="@+id/radi0_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Male"
                android:textColor="@color/colorDarkGreen"
                android:checked="true"
                android:textSize="19sp" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Female"
                android:textColor="@color/colorDarkGreen"
                android:textSize="19sp" />

        </RadioGroup>


        <TextView
            android:id="@+id/or_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_register_btn"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="OR"
            android:textColor="@color/colorDarkGreen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/doctor_already_have_account_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_statement"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_design_2"
            android:text="Already have an account?"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGreen"
            android:textSize="18sp" />


    </RelativeLayout>

</ScrollView>